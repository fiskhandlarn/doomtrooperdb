{% extends 'AppBundle::layout.html.twig' %}
{% import "AppBundle::macros.html.twig" as macros %}

{% block body %}

    <div class="main container">
        <h1 class="site-title hidden-xs">DoomtrooperDB</h1>
        <h2 class="site-slogan">{{ 'slogan' | trans }}</h2>
    </div> <!-- .container -->

    <div class="main container">
        <div class="row">
            {% for data in decklists_by_faction %}
                <div class="col-md-6" style="margin-bottom:30px">
                    <div class="bg-faction bg-{{ data.faction.code }}" style="padding:10px 10px 5px 10px">
                        <div class="media">
                            <div class="media-left" style="font-size:30px"> <!-- TODO -->
                                <span class="icon icon-{{ data.faction.code }}"></span>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading" style="white-space:nowrap"><a
                                            href="{{ path('decklist_detail',{decklist_id:data.decklist.id,decklist_name:data.decklist.nameCanonical}) }}">{{ data.decklist.name }}</a>
                                </h4>
                                <div class="small">
                                    {% set username %}
                                        <span class="username">{{ macros.username_colorless(data.decklist.user) }}</span>
                                    {% endset %}
                                    {{ 'userby' | trans({'%user%': username}) | raw }}
                                    &middot;
                                    <time datetime="{{ data.decklist.dateCreation|date('c') }}">{{ data.decklist.dateCreation|date('M d, Y') }}</time>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="background-color: white; padding: 10px 20px 20px 20px">
                        <div class="small pull-right">
                            {{ macros.decklist_social_icons(data.decklist ) }}
                        </div>
                        <div>{{ data.factions }}</div>
                        <p>{{ data.count_by_type|raw }}</p>
                        <div class="text-center small"><a
                                    href="{{ path('decklists_list',{type:'find',faction:data.faction.code}) }}">{{ 'seemore.faction' | trans }}</a>
                        </div>
                        <div style="clear:both"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebSite",
            "url": "https://localhost/",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "http://localhost/find/?q={search_term_string}",
                "query-input": "required name=search_term_string"
            }
        }
    </script>
{% endblock %}
